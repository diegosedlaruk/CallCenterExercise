	private static final int saltos(int[] c) {
		
        int size = c.length;

        int minorQty = 0;

        int jumpSize = 0;

        for(int i = 0; i < size; i += jumpSize){

        	System.out.println("estoy parado en: " + i);
        	
            if(hasTwoCloudsAvailable(i + 1, size)){
            	
            	System.out.println("tiene dos saltos disponibles.");
            	
            	jumpSize = 1;
            	
                if(c[i+2] == 0){
                	
                	System.out.println("es una nube buena.");
                	
                    jumpSize = 2;
                }            

                minorQty += 1;
                System.out.println("acumulo");
            }      
        }

        return minorQty;
		
	}
	
    private static final boolean hasTwoCloudsAvailable(int actual, int qtyClouds){
        return  (qtyClouds - actual) >= 2 ;
    }

	
	public static void main(String[] args) {
		
		int[] c = new int[7];
		c[0] = 0;
		c[1] = 0;
		c[2] = 1;
		c[3] = 0;
		c[4] = 0;
		c[5] = 1;
		c[6] = 0;

		System.out.println("cantidad minima de saltos:" + saltos(c));
	}
}
