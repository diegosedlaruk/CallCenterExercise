		//Id iteracion
		int i = 0;
		
		for(LlamadaCallCenter llamada : llamadas) {
			
			System.out.println("*******Telefono sonando******");
			
			CallDispatcher dispatcher = new CallDispatcher(llamada, empleados);
			System.out.println("El hilo: " + dispatcher.getName() + " esta procesando la llamada: " + llamada.idLlamada() + ". Id de Iteracion: " + i);
			dispatcher.start();
			i++;
			
			//Entre cada llamado esperamos 3 segundos.
			try {
				Thread.sleep(3 * 1000);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
		
		System.out.println("Termino el turno de las 18:00 apagando telefonos");
		
		boolean terminaronTodos = false;
		
		while(!terminaronTodos) {
			
			System.out.println("Esperando que terminen las llamadas en curso");
			
			for(Empleado empleado : empleados) {
				terminaronTodos = empleado.atendiendoLlamada() ? false : true;
			}
			
			System.out.println("Terminaron todos? -> " + terminaronTodos);
		}
		
		for(Empleado empleado : empleados) {
			System.out.println("El empleado empleado: " + empleado.getNombre() + " atendió: " + empleado.getCantidadLlamadosAtendidos() + " llamadas");
		}
